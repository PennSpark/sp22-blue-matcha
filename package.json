{
  "name": "sp22-blue-matcha",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "cd frontend && npm run build",
    "install-client": "cd frontend && npm install & npm install -only=dev",
    "heroku-postbuild": "npm run install-client && npm run build",
    "start": "npm install && node ./bin/www",
    "dev": "concurrently --kill-others-on-fail \"npm run start\" \"cd frontend && npm run start\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
